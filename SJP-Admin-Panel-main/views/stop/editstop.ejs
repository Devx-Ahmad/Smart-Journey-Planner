<h1 class="heading" style="color: white; font-weight:bold; padding:5px;">Edit Stop</h1>
<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">
    <%= stop.stopName %>
  </h1>

</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <!--  <li class="breadcrumb-item"><a href="/">Dashboard</a></li>-->
          <li class="breadcrumb-item active" style="color: white; font-weight:bold; padding:5px;">
            <%=stop.stopName %>
          </li>
        </ol>
      </nav>
    </div>

  </div>
</div>

<form action="/editstop/<%= stop._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="Name" style="color: white; font-weight:bold; padding:5px;">Name</label>
      <input type="text" class="form-control" id="stopName" name="stopName" value="<%= stop.stopName %>"
        placeholder="Name" required />
    </div>

    <div class="col">
      <label for="Longitude" style="color: white; font-weight:bold; padding:5px;">Longitude</label>
      <input type="float" class="form-control" id="longitude" name="longitude" value="<%= stop.longitude %>"
        placeholder="Longitude" required />
    </div>

    <div class="row form-group mb-4">
      <div class="col">
        <label for="Latitude" style="color: white; font-weight:bold; padding:5px;">Latitude</label>
        <input type="float" class="form-control" id="latitude" name="latitude" value="<%= stop.latitude%>"
          placeholder="Latitude" required />
      </div>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary" style="background-color: black;">Update Stop</button>

    <button style="background-color: black;" type="button" class="btn btn-danger" data-bs-toggle="modal"
      id="deleteButton" data-bs-target="#deleteModal">
      Delete Stop
    </button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a stop.</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the stop
          <b class="fw-bold">
            <%= stop.stopName %>
          </b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form action="/editstop/<%= stop._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">
            Yes, Remove Stop
          </button>
        </form>
      </div>
    </div>
  </div>
</div>