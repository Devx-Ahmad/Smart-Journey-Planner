  <h1 class="h2" style="color: white; font-weight:bold; padding:5px;">Stop</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <!--<button class="btn btn-sm btn-outline-secondary">?</button>-->
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <!-- <li class="breadcrumb-item"><a href="/home">Dashboard</a></li>-->
          <li class="breadcrumb-item active" style="color: white; font-weight:bold; padding:5px;">New Stop</li>
        </ol>
