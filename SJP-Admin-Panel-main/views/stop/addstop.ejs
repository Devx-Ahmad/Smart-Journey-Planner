<form action="/addstop" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="Name" style="color: white; font-weight:bold; padding:5px;">Name</label>
      <input type="text" class="form-control" id="stopName" name="stopName" value="" placeholder="Name" required />
    </div>

    <div class="col">
      <label for="Longitude" style="color: white; font-weight:bold; padding:5px;">Longitude</label>
      <input type="text" class="form-control" id="longitude" name="longitude" value="" placeholder="Longitude" required
        pattern="[0-9]+(\.[0-9]+)?" />
    </div>

    <div class="row form-group mb-4">
      <div class="col">
        <label for="Latitude" style="color: white; font-weight:bold; padding:5px;">Latitude</label>
        <input type="text" class="form-control" id="latitude" name="latitude" value="" placeholder="Latitude" required
          pattern="[0-9]+(\.[0-9]+)?" />
      </div>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary" style="background-color: black;">Add Stop</button>
  </div>
</form>