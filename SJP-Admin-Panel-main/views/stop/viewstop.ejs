        <%= stop.stopId %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px" style="color: white; font-weight:bold; padding:5px;"><b>Stop Name:</b>
      </div>
      <div class="col">
        <%= stop.stopName%>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Longitude:</b></div>
      <div class="col">
        <%= stop.longitude %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Latitude:</b></div>
      <div class="col">
        <%= stop.latitude %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <!-- <div class="col" style="max-width: 140px"><b>Date Created:</b></div>
      <div class="col">
        <%= stop.createdAt %>-->
    </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <!-- <div class="col" style="max-width: 140px"><b>Date Modified:</b></div>
      <div class="col">
        <%= stop.updatedAt %>-->
