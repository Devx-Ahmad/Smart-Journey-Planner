<h2 class="heading" style="color: white; font-weight:bold; padding:5px;">Stops</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Path Number</th>
        <th scope="col" class="text-end">View Stop</th>
      </tr>
    </thead>

    <tbody>
      <% sequence.stops.forEach(element=> { %>
        <tr class="align-middle">
          <td>
            <% const stop=stops.find(stop=> stop._id.toString() ===
              element.stopId); %> <%= stop ? stop.stopName : 'Unknown Stop' %>
          </td>
          <td>
            <%= element.seqNumber%>
          </td>
          <td class="text-end">
            <div class="d-flex flex-row justify-content-end gap-2">
              <a href="/viewstop/<%= element.stopId%>" type="button" style="background-color: black;"
                class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>
            </div>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>