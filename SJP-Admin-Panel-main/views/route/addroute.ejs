<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2" style="color: white; font-weight:bold;">Route</h1>

</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <!--  <li class="breadcrumb-item"><a href="/">Dashboard</a></li>-->
          <li class="breadcrumb-item active" style="color: white; font-weight:bold;">New Route</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>RouteId</b>
    </div>
  </div>
</div>

<form action="/addroute" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="Name" style="color: white; font-weight:bold;">Name</label>
      <input type="text" class="form-control" id="routeName" name="routeName" value="" placeholder="Route Name"
        required />
    </div>

    <div class="col">
      <label for="status" style="color: white; font-weight:bold;">Status</label>
      <select class="form-select" id="status" name="status" required>
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>
    </div>

    <div class="container">
      <label for="seqDropdown" style="color: white; font-weight:bold;">Select a Path:</label>
      <select class="form-select" id="seqDropdown" name="seqDropdown">
        <% sequences.forEach(sequence=> { %>
          <option value="<%= sequence._id %>">
            <%= sequence.seqName %>
          </option>
          <% }); %>
      </select>
    </div>


    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary" style="background-color: black; margin-top: 10px;">Add
        Route</button>
    </div>
</form>