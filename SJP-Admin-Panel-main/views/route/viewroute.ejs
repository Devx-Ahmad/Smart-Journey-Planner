<h1 class="heading" style="color: white; font-weight:bold;">View Route</h1>
<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">
    <%= route.routeName %>
  </h1>

</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <!-- <li class="breadcrumb-item"><a href="/">Dashboard</a></li>-->
          <li class="breadcrumb-item active">
            <%= route.routeName %>
          </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated <%= new Date(route.updatedAt).toUTCString() %> </b>
      <b>StopId:</b>
      <%= route._id %>
    </div>
  </div>
</div>

<ul class="list-group">
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px" style="color: white; font-weight:bold;"><b>Route Id:</b></div>
      <div class="col">
        <%= route.routeId %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Route Name :</b></div>
      <div class="col">
        <%= route.routeName%>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Operational :</b></div>
      <div class="col">
        <%= route.status ? 'Yes' : 'No' %>
      </div>
    </div>
  </li>
  <!--
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Date Created:</b></div>
      <div class="col">
        <%= route.createdAt %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Date Modified:</b></div>
      <div class="col">
        <%= route.updatedAt %>
      </div>
    </div>
  </li>
-->
</ul>

<div class="row">
  <div class="col end-btn">
    <a href="/viewsequence/<%= route.seqId %>" class="btn btn-primary" style="background-color: brown;">
      View Paths
    </a>
  </div>
</div>